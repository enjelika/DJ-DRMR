<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/title"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        
	    <TextView
	        android:id="@+id/text01"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20pt"
	        android:textStyle="bold"
	        android:textColor="#DAA520"
	        android:background="@android:color/transparent"
	        android:text="@string/DJ" />
	    
	    <ImageView 
	        android:id="@+id/logo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/app_name"
	        android:background="@android:color/transparent"
	        android:src="@drawable/ic_launcher"/>
	    
	    <TextView
	        android:id="@+id/text02"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textSize="20pt"
	        android:textStyle="bold"
	        android:textColor="#DAA520"
	        android:background="@android:color/transparent"
	        android:text="@string/DRMR" />
    
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_record"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/btn_play"
        android:background="@drawable/custom_btn"
        android:padding="10dp"
        android:textSize="10pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
        android:text="@string/record_record" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn"
        android:layout_alignBaseline="@+id/btn_record"
        android:layout_alignBottom="@+id/btn_record"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:padding="10dp"
        android:textSize="10pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
        android:text="@string/record_play" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn"
        android:layout_alignBaseline="@+id/btn_play"
        android:layout_alignBottom="@+id/btn_play"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/btn_play"
        android:padding="10dp"
        android:textSize="10pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
        android:text="@string/record_save" />

</RelativeLayout>
