<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#343333" />
             <gradient  android:angle="-90"  android:startColor="#FF1506BF" android:endColor="#FF658CBA"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0000CD" />
             <solid  android:color="#0000CD"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#191970" />
             <gradient  android:angle="-90"  android:startColor="#FF1506BF" android:endColor="#FF658CBA" />            
         </shape>
     </item>
</selector>