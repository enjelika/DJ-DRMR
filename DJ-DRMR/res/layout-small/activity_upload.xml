<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    tools:context="edu.uco.sdd.spring15.dj_drmr.DjdrmrMain$UploadFragment" >

    <LinearLayout
		android:id="@+id/title"
		android:background="@drawable/border"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="25dp"
		android:padding="10dp"
		android:layout_height="wrap_content"
		android:layout_width="240dp"
		android:layout_marginBottom="25dp"
		android:orientation="horizontal">
		        
		<TextView
			android:id="@+id/text01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="23dp"
			android:layout_marginTop="8dp"
			android:textSize="15pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
			android:background="@android:color/transparent"
			android:text="@string/DJ" />
			    
		<ImageView 
			android:id="@+id/logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="@string/app_name"
			android:background="@android:color/transparent"
			android:src="@drawable/ic_launcher"/>
			    
		<TextView
			android:id="@+id/text02"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginTop="8dp"
			android:textSize="15pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
			android:background="@android:color/transparent"
			android:text="@string/DRMR" />
			    
	</LinearLayout>
	
    <TextView 
        android:id="@+id/txtFileChose"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/txtFileChose"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#DAA520"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        />
    
    <Button 
        android:id="@+id/btnUpload"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtFileChose"
        android:background="@drawable/custom_btn"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="10pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
        android:text="@string/btnUpload" />

    <EditText 
        android:id="@+id/editTextTags"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/btnUpload"
        android:hint="@string/tags"
        android:textColor="#DAA520"
        android:textSize="10pt"
        android:inputType="text"
        />
</RelativeLayout>
