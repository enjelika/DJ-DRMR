<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center" >

    <LinearLayout
	    android:id="@+id/title"
	    android:background="@drawable/border"
	    android:layout_centerHorizontal="true"
	    android:padding="10dp"
	    android:layout_height="wrap_content"
	    android:layout_width="450dp"
	    android:layout_marginTop="55dp"
	    android:layout_marginBottom="25dp"
	    android:orientation="horizontal">
	        
		<TextView
			android:id="@+id/text01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="55dp"
			android:textSize="35pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
			android:background="@android:color/transparent"
			android:text="@string/DJ" />
		    
		<ImageView 
			android:id="@+id/logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="25dp"
			android:contentDescription="@string/app_name"
			android:background="@android:color/transparent"
			android:src="@drawable/ic_launcher"/>
		    
		<TextView
			android:id="@+id/text02"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="35pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
			android:background="@android:color/transparent"
			android:text="@string/DRMR" />
		    
	</LinearLayout> 

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
		android:layout_centerHorizontal="true"
        android:textSize="20pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:text="@string/email_prompt" />

	<EditText
        android:id="@+id/editText1"
        android:layout_below="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textSize="20pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:inputType="textEmailAddress" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:text="@string/text_pw_prompt" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:textSize="20pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:inputType="textPassword" />	
	
    <RadioGroup
        android:id="@+id/UserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:layout_below="@id/editText2" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:checked="true"
            android:textSize="20pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
            android:text="@string/radlistener" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textSize="20pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
            android:text="@string/radArtist" />
    </RadioGroup>	
	
    <Button
        android:id="@+id/button1"
        android:layout_below="@id/UserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="20pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:padding="15dp"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
		android:background="@drawable/custom_btn"
        android:text="@string/submit" />

</RelativeLayout>