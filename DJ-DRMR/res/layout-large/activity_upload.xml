<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    tools:context="edu.uco.sdd.spring15.dj_drmr.DjdrmrMain$UploadFragment" >

    <LinearLayout
	    android:id="@+id/title"
	    android:background="@drawable/border"
	    android:padding="10dp"
	    android:layout_height="125dp"
	    android:layout_width="400dp"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="55dp"
	    android:orientation="horizontal">
		    
		<ImageView
		    android:id="@+id/logo"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@android:color/transparent"
		    android:layout_gravity="center"
		    android:contentDescription="@string/app_name"
		    android:src="@drawable/title" />
		    
	</LinearLayout>
	
    <TextView 
        android:id="@+id/txtFileChose"
        android:layout_below="@id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/txtFileChose"
        android:textSize="20pt"
        android:textStyle="bold"
        android:textColor="#DAA520"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    
    <Button 
        android:id="@+id/btnUpload"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtFileChose"
        android:background="@drawable/custom_btn"
        android:layout_marginTop="90dp"
        android:padding="10dp"
        android:textSize="20pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
        android:text="@string/btnUpload" />

	<EditText 
        android:id="@+id/editTextTags"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/btnUpload"
        android:hint="@string/tags"
        android:textColor="#DAA520"
        android:textSize="20pt"
        android:inputType="text" />
	
	<Button 
        android:id="@+id/uploadBtn"
        android:background="@drawable/custom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextTags"
        android:layout_marginTop="30sp"
        android:padding="10dp"
        android:textSize="20pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
        android:text="@string/upload" />
    
</RelativeLayout>
