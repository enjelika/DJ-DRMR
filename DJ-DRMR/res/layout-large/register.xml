<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center" >

    <LinearLayout
	    android:id="@+id/title"
	    android:background="@drawable/border"
	    android:layout_centerHorizontal="true"
	    android:padding="10dp"
	    android:layout_height="wrap_content"
	    android:layout_width="450dp"
	    android:layout_marginTop="55dp"
	    android:layout_marginBottom="55dp"
	    android:orientation="horizontal">
	        
		<TextView
			android:id="@+id/text01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="55dp"
			android:textSize="35pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
			android:background="@android:color/transparent"
			android:text="@string/DJ" />
		    
		<ImageView 
			android:id="@+id/logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="25dp"
			android:contentDescription="@string/app_name"
			android:background="@android:color/transparent"
			android:src="@drawable/ic_launcher"/>
		    
		<TextView
			android:id="@+id/text02"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="35pt"
			android:textStyle="bold"
			android:textColor="#DAA520"
			android:background="@android:color/transparent"
			android:text="@string/DRMR" />
		    
	</LinearLayout>    
    
    <TextView
        android:id="@+id/txt_username2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:textSize="15pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:text="@string/text_user_prompt" />

    <EditText
        android:id="@+id/username2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_username2"
        android:textSize="15pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/txt_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/username2"
        android:background="@android:color/transparent"
        android:textSize="15pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:text="@string/text_pw_prompt" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_password2"
        android:layout_centerHorizontal="true"
        android:textSize="15pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password2"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="15pt"
		android:textStyle="bold"
		android:textColor="#DAA520"
		android:gravity="center"
		android:shadowColor="#0000CD"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.6"
		android:background="@drawable/custom_btn"
        android:text="@string/signup" />

</RelativeLayout>